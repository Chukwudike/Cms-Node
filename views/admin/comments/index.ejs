<% include ../../partials/admin/header %>


<div class="content-wrapper">
    <div class="container-fluid">
        <div class="row">
            <div class="col-12 mb-3 pb-5" >

                <h1 class="mt-3" >Comments</h1>

<table class="table">
    <thead>
    <tr>
        <th>id</th>
        <th>owner</th>
        <th>Status</th>
        <th>Date</th>
    </tr>
    </thead>
    <tbody>

        <% for(var i=0; i<comment.length; i++) { %>

        <tr>
            <th><%=comment[i]._id%></th>
            <td><%=comment[i].user.firstName%></td>

            <td>

                <input data-id=""  type="checkbox" name="approveComment" />

            </td>

            <td><%=comment[i]._id%></td>
            <td>

                <form action="/admin/comments/<%=comment[i]._id%>?_method=DELETE" method="post">

                    <button type="submit" class="btn btn-danger">Delete</button>

                </form>

            </td>
         </tr>
         <% } %>

    </tbody>
</table>
                

            </div>
        </div>
    </div>
    <!-- /.container-fluid-->
    <!-- /.content-wrapper-->

</div>



</body>

</html>


